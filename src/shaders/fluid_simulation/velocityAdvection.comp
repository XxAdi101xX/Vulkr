layout(constant_id = 1) const uint fluidVelocityBufferWidth = 1;
layout(constant_id = 2) const uint fluidVelocityBufferHeight = 1;

layout(set = 0, binding = 0) uniform sampler2D fluidVelocityInputTextureImage;
